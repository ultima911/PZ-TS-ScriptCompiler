{
    "name": "pz-ts-scriptcompiler",
    "version": "0.0.1",
    "description": "A typescript tool for Project Zomboid modding, which allows users to write scripts (item/recipe/etc) in typescript, then compile them for use.",
    "license": "MIT",
    "readmeFilename": "README.md",
    "author": {
        "name": "Ultima911"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ultima911/PZ-TS-ScriptCompiler.git"
    },
    "bugs": {
        "url": "https://github.com/ultima911/PZ-TS-ScriptCompiler/issues"
    },
    "main": "./bin/app.ts",
    "files": [
        "bin/",
        "src/"
    ],
    "engines": {
        "node": "22",
        "npm": "11"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "clean": "tsc --build --clean",
        "compile": "ts-node bin/app.ts",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "prettier": "prettier --check '**/*.{mjs,js,ts}'",
        "prettier:fix": "prettier --write '**/*.{mjs,js,ts}' --list-different"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.26.1",
        "@typescript-eslint/parser": "^8.26.1",
        "eslint": "^8.42.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "prettier": "^3.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.3"
    }
}
